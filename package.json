{
  "name": "ai-workshop-quasar",
  "version": "0.0.1",
  "description": "AI Workshop Facil WebApp",
  "productName": "AI Workshop Quasar",
  "author": "milestonz <place.coach@gmail.com>",
  "type": "module",
  "private": true,
  "scripts": {
    "lint": "eslint -c ./eslint.config.js \"./src*/**/*.{ts,js,cjs,mjs,vue}\"",
    "format": "prettier --write \"**/*.{js,ts,vue,scss,html,md,json}\" --ignore-path .gitignore",
    "test": "playwright test",
    "test:ui": "playwright test --ui",
    "test:headed": "playwright test --headed",
    "dev": "quasar dev",
    "dev:live": "npm run watch-slides & quasar dev",
    "build": "quasar build",
    "build:optimized": "quasar build && node scripts/optimize-images.cjs",
    "build:azure": "npm run build-slides && quasar build && npm run prepare-azure",
    "prepare-azure": "cp -r dist/* . && echo 'Azure 배포 준비 완료! (dist 내용을 루트로 복사)'",
    "postinstall": "echo 'Postinstall completed'",
    "start": "node server.js",
    "start:azure": "NODE_ENV=production PORT=8080 node server.js",
    "update-files": "node scripts/update-files-json.cjs",
    "update-sidebar": "node scripts/update-sidebar-data.cjs",
    "convert-slides": "node scripts/slide-converter/convert-slides.js",
    "convert-slides-individual": "node scripts/slide-converter/convert-slides-individual.js public/slides public/generated/slides",
    "convert-html-to-markdown": "node scripts/convert-html-to-markdown.js",
    "build-slides": "node scripts/build-slides.cjs public/slides public/html && npm run update-sidebar",
    "build:start": "npm run build-slides && node server.js",
    "start:results": "PORT=9001 node server.js",
    "build-slides-individual": "npm run convert-slides-individual && echo '✅ 개별 슬라이드 변환 완료!'",
    "watch-slides": "node scripts/slide-converter/watch-slides.js",
    "batch-convert": "node scripts/slide-converter/batch-convert.js"
  },
  "dependencies": {
    "@quasar/extras": "^1.16.4",
    "@types/dompurify": "^3.0.5",
    "chart.js": "^4.5.0",
    "cors": "^2.8.5",
    "dompurify": "^3.2.6",
    "dotenv": "^17.2.1",
    "express": "^4.19.2",
    "firebase": "^12.0.0",
    "html2canvas": "^1.4.1",
    "lodash-es": "^4.17.21",
    "marked": "^16.1.1",
    "nodemailer": "^7.0.5",
    "pinia": "^3.0.3",
    "quasar": "^2.16.0",
    "reveal.js": "^5.2.1",
    "tsx": "^4.20.3",
    "vue": "^3.4.18",
    "vue-chartjs": "^5.3.2",
    "vue-router": "^4.0.12"
  },
  "devDependencies": {
    "@eslint/js": "^9.14.0",
    "@playwright/test": "^1.54.1",
    "@quasar/app-vite": "^2.1.0",
    "@types/cors": "^2.8.19",
    "@types/lodash-es": "^4.17.12",
    "@types/node": "^20.19.11",
    "@types/nodemailer": "^6.4.17",
    "@types/reveal.js": "^5.2.0",
    "@vue/eslint-config-prettier": "^10.1.0",
    "@vue/eslint-config-typescript": "^14.4.0",
    "autoprefixer": "^10.4.2",
    "eslint": "^9.14.0",
    "eslint-plugin-vue": "^9.30.0",
    "globals": "^15.12.0",
    "prettier": "^3.3.3",
    "typescript": "~5.5.3",
    "vite-plugin-checker": "^0.9.0",
    "vue-tsc": "^2.0.29"
  },
  "engines": {
    "node": "^28 || ^26 || ^24 || ^22 || ^20 || ^18",
    "npm": ">= 6.13.4",
    "yarn": ">= 1.21.1"
  }
}
