rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // users 컬렉션: 인증된 사용자는 자신의 문서를 읽고 쓸 수 있음
    // 게스트 사용자도 자신의 문서를 생성할 수 있음 (guestId로 식별)
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
      // 새 사용자 등록을 위해 create 권한 추가 (인증된 사용자 또는 게스트)
      allow create: if request.auth != null || 
        (request.resource.data.isGuest == true && 
         request.resource.data.guestId == userId);
    }
    
    // slides 컬렉션: 인증된 사용자는 읽고 쓸 수 있음
    match /slides/{slideId} {
      allow read, write: if request.auth != null;
    }
    
    // locks 컬렉션: 모든 사용자가 읽을 수 있지만, 쓰기는 인증된 사용자만 가능
    match /locks/{courseId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // guestUsers 컬렉션: 모든 사용자가 읽고 쓸 수 있음 (게스트 모드용)
    match /guestUsers/{guestId} {
      allow read, write: if true;
    }
    
    // 기타 컬렉션: 인증된 사용자는 모든 컬렉션에 접근 가능 (개발용)
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
} 