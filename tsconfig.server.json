{
  "compilerOptions": {
    "target": "es2020",
    "module": "es2020",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "strict": true,
    "outDir": "dist",
    "rootDir": ".",
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "allowJs": true,
    "declaration": false,
    "sourceMap": false,
    "types": ["node"]
  },
  "include": ["server.ts", "src/services/api/*.ts", "env.d.ts"],
  "exclude": ["node_modules", "dist"]
}
